@page "{id?}"
@model UniverseModel
@{
    @if (string.IsNullOrEmpty(Model.Id)) {
        ViewData["Title"] = "Universes";
    } else {
        ViewData["Title"] = "Universe " + Model.Universe.Title;
    }
}

@if (string.IsNullOrEmpty(Model.Id)) {
    <h1>Universes</h1>
    <ul>
        @foreach (var universe in Model.Universes) {
            <li>
                <a asp-page="Universe" asp-route-id="@universe.SeoName">@universe.Title</a>
            </li>
        }
    </ul>
} else {
    <h1>@Model.Universe.Title</h1>
    <div class="my-textblock">
        <div>
            <span>Tags</span>:
            @foreach (var tag in Model.Universe.Tags) {
                <span class="my-tag">@tag</span>
            }
        </div>
        <div>
            <span>Edited</span>:
            @foreach (var editor in Model.Universe.Editors) {
                <a class="my-editor" href="@("http://github.com/" + editor)">@editor</a>
            }
        </div>
        <div>
            <span>Approved</span>:
            @foreach (var approver in Model.Universe.Approvers) {
                <a class="my-approver" href="@("http://github.com/" + approver)">@approver</a>
            }
        </div>
    </div>

    @if (Model.Universe.Images.Length > 0) {
        <div class="my-gallery">
            @foreach (var image in Model.Universe.Images) {
                <img src="@image" />
            }
        </div>
    }

    <div class="my-textblock">
        <h2>Civilizations</h2>
        <ul>
            @foreach (var civilization in Model.Universe.Civilizations.Select(pair => pair.Value).OrderBy(x => x.Year)) {
                <li>
                    <a asp-page="Civilization" asp-route-id="@civilization.SeoName">@civilization.Title</a>
                </li>
            }
        </ul>
    </div>

    <div class="my-textblock">
        <h2>Factions</h2>
        <ul>
            @foreach (var (factionId, faction) in Model.Universe.Factions) {
                <li>
                    <a asp-page="Faction" asp-route-id="@faction.SeoName">@faction.Title</a>
                </li>
            }
        </ul>
    </div>

    <div class="my-textblock" id="iDescription">
        <span id="iDescriptionSource">@Model.Universe.Description</span>
    </div>

    @await Html.PartialAsync("_MarkdownConverterPartial", new Shared._MarkdownConverterPartial.Model() { Source = "iDescriptionSource", Target = "iDescription"})
}
